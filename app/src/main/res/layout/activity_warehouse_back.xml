<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.WarehouseBackActivity">

    <TextView
        android:id="@+id/tv_site_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        android:text="站点"
        android:textColor="#333333"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_site"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/re_f5f5f5_radius_12dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:hint="点击这里选站点"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        android:textColorHint="#C6C6C6"
        app:layout_constraintTop_toBottomOf="@id/tv_site_title" />

    <TextView
        android:id="@+id/tv_container_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        android:text="容器"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_site" />

    <EditText
        android:id="@+id/et_container"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_scanning_text"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:hint="容器号"
        android:imeOptions="actionDone"
        android:paddingHorizontal="12dp"
        android:singleLine="true"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tv_container_title" />

    <TextView
        android:id="@+id/tv_shelf_area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:text="上架库区"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_container" />

    <TextView
        android:id="@+id/tv_shelf_area"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/re_f5f5f5_radius_12dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tv_shelf_area_title" />

    <TextView
        android:id="@+id/tv_shelf_site_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:text="上架库位"
        android:textColor="#333333"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_shelf_area" />

    <TextView
        android:id="@+id/tv_shelf_location"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/re_f5f5f5_radius_12dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tv_shelf_site_title" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="返回"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_confirm" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="#3296FA"
        android:gravity="center"
        android:text="回库"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_back"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>