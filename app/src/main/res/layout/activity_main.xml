<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_init_stack"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_main_icon"
            android:drawableTop="@drawable/ic_baseline_shopping_cart_24"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="入库扫描"
            android:textColor="#3296FA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_back_stack"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_main_icon"
            android:drawableTop="@drawable/ic_baseline_settings_backup_restore_24"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="回库扫描"
            android:textColor="#3296FA"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_1">

        <TextView
            android:id="@+id/tv_out_stack"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_main_icon"
            android:drawableTop="@drawable/ic_baseline_add_shopping_cart_24"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="出库挑拣"
            android:textColor="#3296FA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_inventory"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_main_icon"
            android:drawableTop="@drawable/ic_baseline_edit_24"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="盘点"
            android:textColor="#3296FA"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_2">

        <TextView
            android:id="@+id/tv_bind_stack"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_main_icon"
            android:drawableTop="@drawable/ic_baseline_loyalty_24"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="库位绑定RFID"
            android:textColor="#3296FA"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_search_stack"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/bg_main_icon"
            android:drawableTop="@drawable/ic_baseline_search_24"
            android:gravity="center"
            android:paddingTop="15dp"
            android:text="库存查询"
            android:textColor="#3296FA"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="退出"
        android:textColor="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_station" />

    <TextView
        android:id="@+id/tv_station"
        android:layout_width="0dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_back"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>