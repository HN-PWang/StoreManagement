<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.WarehousingActivity">

    <TextView
        android:id="@+id/tv_site_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        android:text="站点"
        android:textColor="#333333"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_search_site"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/re_f5f5f5_radius_12dp"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_vertical"
        android:hint="点击这里选站点"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        android:textColorHint="#C6C6C6"
        app:layout_constraintTop_toBottomOf="@id/tv_site_title" />

    <TextView
        android:id="@+id/tv_asn_code_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="60dp"
        android:text="入库序号"
        android:textColor="#333333"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_search_site" />

    <TextView
        android:id="@+id/tv_asn_code"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/re_f5f5f5_radius_12dp"
        android:gravity="center_vertical"
        android:hint="点击这里选择序号"
        android:paddingHorizontal="12dp"
        android:textColor="#333333"
        android:textColorHint="#C6C6C6"
        app:layout_constraintTop_toBottomOf="@id/tv_asn_code_title" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="返回"
        android:textColor="#333333"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_next" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:background="#3296FA"
        android:gravity="center"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tv_back"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>